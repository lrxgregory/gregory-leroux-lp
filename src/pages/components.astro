<Layout
	title="Bibliothèque de composants"
	description="Découvrez tous les composants disponibles pour votre site web"
	noindex={true}
>
	<!-- Page Header -->
	<Section padding="both" classes="bg-gradient-to-br from-primary-500 to-primary-700 text-white">
		<Row>
			<Col span="12" align="center">
				<h1 class="mb-4 text-5xl font-bold text-white">Composez votre site web sur mesure</h1>
				<p class="mx-auto mb-8 max-w-3xl text-xl text-white/90">
					Choisissez votre identité visuelle, sélectionnez les sections qui vous correspondent, et
					obtenez un site professionnel optimisé pour convertir vos visiteurs en clients.
				</p>

				<!-- Plan Selector -->
				<div class="mx-auto mb-8 max-w-2xl">
					<h2 class="mb-4 text-2xl font-bold text-white">Sélectionnez votre offre</h2>
					<div class="flex flex-col justify-center gap-4 sm:flex-row">
						<button
							class="plan-selector active rounded-lg bg-white px-6 py-3 font-semibold text-primary-700 transition-all hover:scale-105"
							data-plan="vitrine"
						>
							<div class="text-lg font-bold">Vitrine</div>
							<div class="text-sm opacity-80">490€ TTC</div>
						</button>
						<button
							class="plan-selector rounded-lg bg-white/20 px-6 py-3 font-semibold text-white transition-all hover:scale-105 hover:bg-white/30"
							data-plan="pro"
						>
							<div class="text-lg font-bold">Pro</div>
							<div class="text-sm opacity-80">690€ TTC</div>
						</button>
					</div>
					<p class="mt-4 text-sm text-white/70">
						Les composants disponibles pour votre offre sont affichés ci-dessous
					</p>
				</div>

				<!-- Process Steps -->
				<div class="mx-auto grid max-w-4xl grid-cols-1 gap-6 text-center md:grid-cols-3">
					<div class="rounded-lg bg-white/10 p-6">
						<div class="mb-3 flex justify-center">
							<Palette class="h-10 w-10 text-white" />
						</div>
						<h3 class="mb-2 text-lg font-bold text-white">1. Définissez votre look</h3>
						<p class="text-sm text-white/80">Style, typographie et palette de couleurs</p>
					</div>
					<div class="rounded-lg bg-white/10 p-6">
						<div class="mb-3 flex justify-center">
							<Box class="h-10 w-10 text-white" />
						</div>
						<h3 class="mb-2 text-lg font-bold text-white">2. Composez votre site</h3>
						<p class="text-sm text-white/80">Sections dans l'ordre optimal de conversion</p>
					</div>
					<div class="rounded-lg bg-white/10 p-6">
						<div class="mb-3 flex justify-center">
							<Rocket class="h-10 w-10 text-white" />
						</div>
						<h3 class="mb-2 text-lg font-bold text-white">3. Lancez-vous</h3>
						<p class="text-sm text-white/80">Site unique prêt à générer des leads</p>
					</div>
				</div>
			</Col>
		</Row>
	</Section>

	<!-- ÉTAPE 1: Personnalisation du style -->
	<Section id="style-selection" padding="top" classes="bg-neutral-50 dark:bg-neutral-950">
		<Row>
			<Col span="12">
				<div class="mb-12 text-center">
					<div
						class="mb-4 inline-flex items-center gap-2 rounded-full bg-primary-100 px-4 py-2 font-semibold text-primary-700"
					>
						<Palette class="h-6 w-6" />
						Étape 1 sur 3
					</div>
					<h2 class="mb-4 text-4xl font-bold">Définissez votre identité visuelle</h2>
					<p class="mx-auto max-w-3xl text-lg text-neutral-600 dark:text-neutral-400">
						<strong>Choisissez le style graphique qui correspond à votre activité.
					</p>
				</div>
			</Col>
		</Row>
	</Section>

	<!-- Border Radius Selection (Tailwind Style) -->
	<Section classes="bg-white dark:bg-neutral-900">
		<Row>
			<Col span="12">
				<div class="mb-8">
					<h3 class="mb-4 text-2xl font-bold">1. Choisissez vos coins arrondis</h3>
