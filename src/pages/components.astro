<script>
	// Plan filtering logic with cumulative hierarchy
	document.addEventListener('DOMContentLoaded', () => {
		const planSelectors = document.querySelectorAll('.plan-selector')

		// Define what each plan includes (cumulative)
		const planIncludes = {
			vitrine: ['vitrine'],
			pro: ['vitrine', 'pro']
		}

		function updateVisibility(selectedPlan: string) {
			// Get the list of plans to show based on selection
			const plansToShow = planIncludes[selectedPlan as keyof typeof planIncludes] || []

			// Get all elements with data-plan attribute, but exclude the buttons themselves
			const allPlanElements = document.querySelectorAll('[data-plan]:not(.plan-selector)')

			allPlanElements.forEach((element) => {
				const elementPlan = element.getAttribute('data-plan')
				if (!elementPlan) return

				// Show element if its plan is included in the selected plan
				if (plansToShow.includes(elementPlan)) {
					element.classList.remove('hidden')
				} else {
					element.classList.add('hidden')
				}
			})

			// Update button states
			planSelectors.forEach((btn) => {
				if (btn.getAttribute('data-plan') === selectedPlan) {
					btn.classList.add('active')
				} else {
					btn.classList.remove('active')
				}
			})

			// Update summary
			const summaryPlan = document.getElementById('summary-plan')
			if (summaryPlan) {
				const planLabels: Record<string, string> = {
					vitrine: 'Vitrine',
					pro: 'Pro'
				}
				summaryPlan.textContent = planLabels[selectedPlan] || selectedPlan
			}
		}

		// Add click handlers
		planSelectors.forEach((button) => {
			button.addEventListener('click', () => {
				const plan = button.getAttribute('data-plan')
				if (plan) {
					updateVisibility(plan)
				}
			})
		})

		// Initialize with Vitrine plan by default
		updateVisibility('vitrine')

		// ========================================
		// Design Choices Tracker (for set-client.js)
		// ========================================
		const designChoices = {
			borderRadius: 'default',
			shadow: 'default',
			primaryColor: '#2563EB',
			secondaryColor: 'none'
		}

		// Mapping des valeurs pour l'affichage
		const borderRadiusLabels: Record<string, string> = {
			none: 'none (0px)',
			sm: 'sm (2px)',
			default: 'default (4px)',
			md: 'md (6px)',
			lg: 'lg (8px)',
			xl: 'xl (12px)',
			'2xl': '2xl (16px)',
			'3xl': '3xl (24px)',
			full: 'full (rond)'
		}

		// Update summary in the DOM
		function updateSummary() {
			const summaryRadius = document.getElementById('summary-radius')
			const summaryShadow = document.getElementById('summary-shadow')
			const summaryPrimary = document.getElementById('summary-primary')
			const summarySecondary = document.getElementById('summary-secondary')

			if (summaryRadius)
				summaryRadius.textContent =
					borderRadiusLabels[designChoices.borderRadius] || designChoices.borderRadius
			if (summaryShadow) summaryShadow.textContent = designChoices.shadow
			if (summaryPrimary) summaryPrimary.textContent = designChoices.primaryColor
			if (summarySecondary)
				summarySecondary.textContent =
					designChoices.secondaryColor === 'none' ? 'Aucune' : designChoices.secondaryColor

			// Log to console for debugging
			console.log('📊 Design Choices:', designChoices)
		}

		// Border Radius Selection
		const borderRadiusInputs = document.querySelectorAll('input[name="border-radius"]')
		borderRadiusInputs.forEach((input) => {
			input.addEventListener('change', (e) => {
				const target = e.target as HTMLInputElement
				if (target.checked) {
					designChoices.borderRadius = target.value
					updateSummary()
				}
			})
		})

		// Shadow Selection
		const shadowInputs = document.querySelectorAll('input[name="shadow"]')
		shadowInputs.forEach((input) => {
			input.addEventListener('change', (e) => {
				const target = e.target as HTMLInputElement
				if (target.checked) {
					designChoices.shadow = target.value
					updateSummary()
				}
			})
		})

		// Color Selection - Sexy Color Pickers
		const primaryColorPicker = document.getElementById('primary-color-picker') as HTMLInputElement
		const primaryPreview = document.getElementById('primary-preview') as HTMLElement
		const primaryValue = document.getElementById('primary-value') as HTMLElement
		const secondaryColorPicker = document.getElementById('secondary-color-picker') as HTMLInputElement
		const secondaryPreview = document.getElementById('secondary-preview') as HTMLElement
		const secondaryValue = document.getElementById('secondary-value') as HTMLElement

		// Initialize previews
		if (primaryColorPicker && primaryPreview) {
			primaryPreview.style.backgroundColor = primaryColorPicker.value
		}
		if (secondaryColorPicker && secondaryPreview) {
			secondaryPreview.style.backgroundColor = secondaryColorPicker.value
		}

		// Primary color picker change
		if (primaryColorPicker && primaryPreview && primaryValue) {
			primaryColorPicker.addEventListener('input', (e) => {
				const target = e.target as HTMLInputElement
				const color = target.value
				designChoices.primaryColor = color
				primaryPreview.style.backgroundColor = color
				primaryValue.textContent = color.toUpperCase()
				updateSummary()
			})
		}

		// Secondary color picker change
		if (secondaryColorPicker && secondaryPreview && secondaryValue) {
			secondaryColorPicker.addEventListener('input', (e) => {
				const target = e.target as HTMLInputElement
				const color = target.value
				designChoices.secondaryColor = color
				secondaryPreview.style.backgroundColor = color
				secondaryValue.textContent = color.toUpperCase()
				updateSummary()
			})
		}

		// ========================================
		// Component Selection Tracker
		// ========================================
		const selectedComponents: string[] = []

		// Component labels mapping
		const componentLabels: Record<string, string> = {
			'hero-home': 'Hero Home',
			'hero-split': 'Hero Split (2 colonnes)',
			'hero-simple': 'Hero Simple',
			'brands-default': 'Logos Partenaires',
			'benefits-image': 'Benefits Image',
			'benefits-list': 'Benefits List',
			'benefits-cards': 'Benefits Cards',
			'steps-process': 'Steps Process',
			'highlights-rows': 'Highlights Rows',
			'media-text-left': 'Media Text (Image Gauche)',
			'media-text-right': 'Media Text (Image Droite)',
			'gallery-before-after': 'Before/After Gallery',
			'gallery-marquee': 'Marquee Gallery',
			'gallery-projects': 'Projects Gallery',
			'pricing-columns': 'Pricing Columns',
			'pricing-cards': 'Pricing Cards',
			'pricing-simple': 'Pricing Simple',
			'reviews-cards': 'Témoignages Cards',
			'reviews-featured': 'Carrousel Témoignages Premium',
			'faq-basic': 'FAQ Basic',
			'faq-numbered': 'FAQ Numbered',
			'faq-grid': 'FAQ Grid',
			'cta-light': 'CTA Light',
			'cta-dark': 'CTA Dark',
			'cal-booking': 'Calendar Booking',
			'contact-form-full': 'Contact Form (Full)',
			'contact-form-simple': 'Contact Form (Simple)'
		}

		// Update components summary
		function updateComponentsSummary() {
			const summaryContainer = document.getElementById('summary-components')
			if (!summaryContainer) return

			if (selectedComponents.length === 0) {
				summaryContainer.innerHTML =
					'<p class="italic text-neutral-400">Aucun composant sélectionné</p>'
			} else {
				const componentsHTML = selectedComponents
					.map((comp) => `<p>• ${componentLabels[comp] || comp}</p>`)
					.join('')
				summaryContainer.innerHTML = componentsHTML
			}

			console.log('🧩 Selected Components:', selectedComponents)
		}

		// Listen to all component checkboxes
		const componentCheckboxes = document.querySelectorAll(
			'input[type="checkbox"][name^="hero-"], input[type="checkbox"][name^="brands-"], input[type="checkbox"][name^="reviews-"], input[type="checkbox"][name^="benefits-"], input[type="checkbox"][name^="steps-"], input[type="checkbox"][name^="highlights-"], input[type="checkbox"][name^="media-"], input[type="checkbox"][name^="gallery-"], input[type="checkbox"][name^="pricing-"], input[type="checkbox"][name^="faq-"], input[type="checkbox"][name^="cta-"], input[type="checkbox"][name^="cal-"], input[type="checkbox"][name^="contact-"]'
		)

		componentCheckboxes.forEach((checkbox) => {
			checkbox.addEventListener('change', (e) => {
				const target = e.target as HTMLInputElement
				const componentName = target.name

				if (target.checked) {
					// Add to selection if not already present
					if (!selectedComponents.includes(componentName)) {
						selectedComponents.push(componentName)
					}
				} else {
					// Remove from selection
					const index = selectedComponents.indexOf(componentName)
					if (index > -1) {
						selectedComponents.splice(index, 1)
					}
				}

				updateComponentsSummary()
			})
		})
	})
</script>
