---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import Features from '../components/blocks/features/FeatureCards.astro'
import HighlightBlocks from '../components/blocks/highlights/HightlightRows.astro'
import Steps from '../components/blocks/Steps.astro'
import ContactForm from '../components/blocks/contact/ContactForm.astro'
import Pricing from '../components/blocks/pricing/Pricing.astro'
import FaqSticky from '../components/blocks/FAQ/FaqSticky.astro'

// Data
import faqData from '../data/json-files/faqData.json'

// - SEO
const SEO = {
	title: 'Site Vitrine Professionnel en 7 Jours | Prix Fixe Sans Surprise',
	description:
		'Artisan, ostéopathe, naturopathe ? Obtenez votre site vitrine professionnel livré en 7 jours. Design moderne, formulaire contact, WhatsApp, prise de RDV. Prix fixe dès 890€ HT. Devis gratuit.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<Features />
	<Steps />
	<HighlightBlocks />
	<Pricing variant='cards'/>
	<FaqSticky title="Questions fréquentes" data={faqData} />
	<ContactForm variant="simple" />
</Layout>
