---
// Layout for Markdown pages
import Layout from './Layout.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'

// Props
type Props = {
	title?: string
	description?: string
	robots?: string
}

const { title, description, robots } = Astro.props.frontmatter || Astro.props
const noindex = robots?.includes('noindex') || false
---

<Layout title={title} description={description} noindex={noindex}>
	<Section padding="top" classes="bg-white dark:bg-neutral-950">
		<Row>
			<Col span="12">
				<article class="prose prose-neutral dark:prose-invert max-w-4xl mx-auto">
					<h1>{title}</h1>
					<slot />
				</article>
			</Col>
		</Row>
	</Section>
</Layout>

<style>
	article {
		@apply text-neutral-900 dark:text-neutral-100;
	}

	article :global(h1) {
		@apply text-4xl font-bold mb-8 text-neutral-900 dark:text-white;
	}

	article :global(h2) {
		@apply text-3xl font-bold mt-12 mb-6 text-neutral-900 dark:text-white;
	}

	article :global(h3) {
		@apply text-2xl font-bold mt-8 mb-4 text-neutral-900 dark:text-white;
	}

	article :global(p) {
		@apply mb-4 leading-relaxed;
	}

	article :global(ul) {
		@apply mb-4 list-disc pl-6;
	}

	article :global(ol) {
		@apply mb-4 list-decimal pl-6;
	}

	article :global(li) {
		@apply mb-2;
	}

	article :global(a) {
		@apply text-primary-600 hover:text-primary-700 underline;
	}

	article :global(strong) {
		@apply font-semibold text-neutral-900 dark:text-white;
	}
</style>
